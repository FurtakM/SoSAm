     Say(tmp[1], 'D7-Sol1-2');
     Say(JMM, 'D7-JMM-3');
     Say(tmp[1], 'D7-Sol1-3');

     If IsOK(Cyrus) and IsOK(Lisa) then
     begin
          Say(Cyrus, 'D7-Cyrus-3');
