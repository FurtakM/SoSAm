begin
    Say(Denis, 'DR1-Den-1');
    Say(JMM, 'DR1-JMM-1');
end;

Function CheckOptoLab;
var i;
begin
    result = false;

    for i in FilterAllUnits([[f_side, 1], [f_or, [f_btype,b_lab_half],[f_btype,b_lab_full]]]) do
    begin     
        if (GetLabKind(i, 1) = b_lab_opto) or (GetLabKind(i, 2) = b_lab_opto) then
        begin
            result = true;
            break;
        end;
    break;
    end;
end;

