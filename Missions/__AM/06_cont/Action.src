// Start mission
Every 0$01 do
begin

     If FilterAllUnits([[f_side, 1], [f_class, 2]]) = 0 then SetClass(JMM, 2);

    ChangeMissionObjectives('M1');

    case difficulty of
        1: ChangeMissionObjectives('M1-1');
        2: ChangeMissionObjectives('M1-2');
        3: ChangeMissionObjectives('M1-3');
    end;

    ChangeMissionObjectives('M1cont');

    SaveForQuickRestart;

end;

// First crate and dialog
every 0$1 do
begin
     Wait(Rand(0$10,0$25));
     CreateCratesArea(5, FirstCrate, true);
     wait(0$15);

     if IsOk(Lisa) then
     begin
          Say(Lisa, 'DR0-Lisa-1');
     end else
     begin
          DialogRandom(FilterAllUnits([[f_side, 1], [f_type, unit_human], [f_sex, 1], [f_or, [f_class, 1], [f_class, 2], [f_class, 3], [f_class, 4]]]) diff [JMM, Gladstone, Frank], 'DR0-Sol1-1', 'DR0-Sol1-1');
     end;
    DialogRandom(FilterAllUnits([[f_side, 1], [f_type, unit_human], [f_sex, 1], [f_or, [f_class, 1], [f_class, 2], [f_class, 3], [f_class, 4]]]) diff [JMM, Gladstone, Frank], 'DR0-Sol2-1', 'DR0-Sol2-1');
    If IsOk(Cyrus) then Say(Cyrus, 'DR0-Cyrus-1');
    Say(JMM, 'DR0-JMM-1');
end;

