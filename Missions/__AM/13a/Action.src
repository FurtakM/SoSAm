Export Function Action;
var tmp, i, un;
begin
CenterNowOnXY(68, 39);
tmp := FilterAllUnits([f_side, 7]);

InGameOn;

ComMoveXY(tmp, 71, 49);

repeat
 wait(0$1);
until SeeXY(7, 71, 51);

DialogueOn;

Say(JMM, 'D1-JMM-1');

if Joan then
   Say(Joan, 'D1-Joan-1');

if Lisa then
   Say(Lisa, 'D1-Lisa-1');

if Joan or Lisa then
   Say(JMM, 'D1-JMM-2');

DialogueOff;
InGameOff;

PlaceSeeing(71, 50, 7, -30);
RemoveSeeing(71, 50, 7);

ChangeMissionObjectives('M1');

repeat
 wait(0$1);
until freedom;

wait(rand(0$10, 0$20));

PrepareGossudarov;

repeat
 wait(0$1);
until FilterAllUnits([[f_side, 6], [f_not, [f_lives, 1000]]]);

tmp := FilterAllUnits([f_side, 6]);

for i in tmp do
    SetSide(i, 7);

DialogueOn;

ComTurnUnit([JMM, Roth], Gossudarov);

CenterNowOnUnits(Gossudarov);

if not Roth then
   begin
   Say(JMM, 'D2-JMM-1');
   Say(JMM, 'D2-JMM-1b');
   Say(Gossudarov, 'D2-Gos-1');
   Say(JMM, 'D2-JMM-2');
   Say(Gossudarov, 'D2-Gos-2');
   end
else
   begin
   Say(Roth, 'D2-Roth-2');
   Say(JMM, 'D2-JMM-1a');
   Say(Roth, 'D2-Roth-2a');
   Say(Roth, 'D2-Roth-2b');
   Say(JMM, 'D2-JMM-3');
   Say(Gossudarov, 'D2-Gos-3');
   Say(JMM, 'D2-JMM-4');
   Say(Gossudarov, 'D2-Gos-4');
   end;

Say(JMM, 'D2-JMM-5');
Say(Gossudarov, 'D2-Gos-5');
Say(JMM, 'D2-JMM-6');

DialogueOff;

wait(0$2);

if Kirilenkova then
   Say(Kirilenkova, 'D3-Kir-1');

gossudarov_arrive := true;

//Hint('CombinedForces');

repeat
 wait(0$1);
until ru_lab_builded;

if Kirilenkova then
   Say(Kirilenkova, 'D3a-Kir-1')
else
 begin
 un := SciRu;
 Say(un, 'D3a-Sci1-1');
 end;

if Kirilenkova or un then
   Say(JMM, 'D3a-JMM-1');
End;

// If player has less than 6 people
Every 0$1 trigger gossudarov_arrive and FilterAllUnits([[f_side, 7], [f_or, [f_class, 1], [f_class, 2], [f_class, 3], [f_class, 4], [f_class, 5], [f_class, 8], [f_class, 9]]]) < 6 do
YouLost('TooMany');


// First attempt
Every 0$40 trigger GetSide(Gossudarov) = 7 do
var i, tmp, un;
begin
uc_side := 3;
uc_nation := 3;

PrepareVehicle(ru_medium_wheeled, engine_siberite, control_computer, ru_heavy_machine_gun, 100);
un := CreateVehicle;
PlaceUnitArea(un, south_west_spawn, false);

ComMoveXY(un, 67, 45);
AddComWait(un, 0$2);
AddComMoveXY(un, 69, 18);
AddComMoveXY(un, 60, 2);

repeat
 wait(0$1);
until not IsOk(un) or IsInArea(un, north_spawn);

if IsInArea(un, north_spawn) then
   RemoveUnit(un);
End;

// Russian spot player base
Every 0$2 do
var i, un, tmp;
begin
repeat
 wait(0$2);
 tmp := FilterAllUnits([[f_side, 7], [f_see, 3]]);
until tmp;

un := NearestUnitToUnit(tmp, JMM);
player_spotted := true;
tmp := SciRu;

DialogueOn;

PlaceSeeing(GetX(un), GetY(un), 7, -8);
CenterNowOnUnits(un);

if tmp then
   Say(tmp, 'D4-RSci1-1');

if Gossudarov then
   begin
   Say(Gossudarov, 'D4-Gos-1');
   Say(JMM, 'D4-JMM-1');
   end;

RemoveSeeing(GetX(un), GetY(un), 7);

DialogueOff;

ChangeMissionObjectives('M5');
End;

// Spawn Belkov
Every 0$30+2$30 trigger player_spotted do
begin
PrepareBelkov;

ComMoveXY(Belkov, 118, 106);
AddComHold(Belkov);

repeat
 wait(0$1);
until IsAt(Belkov, 118, 106);

ChangeSideFog(4, 7);

if IsOk(Belkov) then
   begin
   InGameOn;
   DialogueOn;

   SayRadio(Belkov, 'D5-Bel-1');

   if Gossudarov then
      begin
      Say(Gossudarov, 'D5-Gos-1');
      Say(JMM, 'D5-JMM-1');
      Say(Gossudarov, 'D5-Gos-2');
      Say(JMM, 'D5-JMM-2');
      end;

   DialogueOff;
   InGameOff;
   end;

case Query('QSaveBelkov') of
1: begin
   DialogueOn;
   Say(JMM, 'D5a-JMM-1');
   SayRadio(Belkov, 'D5a-Bel-1');
   DialogueOff;

   ComMoveXY(Belkov, 83, 49);
   end;
2: begin
   Say(JMM, 'D5a-JMM-2');

   ComWait(Belkov, 0$10);
   AddComMoveXY(Belkov, 107, 109);
   AddComHold(Belkov);
   end;
end;

repeat
 wait(0$1);
until (IsDead(Belkov) and GetSide(Belkov) = 4) or GetDistUnits(NearestUnitToUnit(FilterAllUnits([f_side, 7]), Belkov), Belkov) < 10;

if IsDead(Belkov) then
   begin
   CenterNowOnUnits(Belkov);
   Say(JMM, 'D5a-JMM-2a');
   exit;
   end;

if See(7, Belkov) then
   SetSide(Belkov, 7);

repeat
 wait(0$1);
until GetDistUnitXY(Belkov, 66, 45) < 30;

Say(Belkov, 'D6-Bel-1');
End;

Every 0$1 trigger IsOk(Belkov) and UnitShoot(Belkov) in FilterAllUnits([f_or, [f_weapon, ru_rocket], [f_weapon, ru_rocket_launcher]]) do
Say(Belkov, 'D7-Bel-1');


// Ar base spotted without Burlak
Every 0$2 trigger FilterAllUnits([[f_side, 7], [f_see, 2]]) and not ar_base_spotted and not IsPlaced(Burlak) do
var tmp;
begin
ar_base_spotted := true;
tmp := FilterAllUnits([[f_side, 2], [f_type, unit_building]]); 
tmp := NearestUnitToUnit(tmp, JMM);

RevealFogArea(7, area_base_arabian);

DialogueOn;

CenterNowOnXY(GetX(tmp), GetY(tmp));

tmp := FilterAllUnits([[f_side, 7], [f_nation, 1], [f_sex, sex_male]]) diff [JMM, Bobby, Cyrus, Frank, Roth, Cornel, Denis, Gladstone];

if not tmp then
   tmp := FilterAllUnits([[f_side, 7], [f_nation, 1], [f_sex, sex_female]]) diff [Joan, Lisa, Kikuchi, Simms];

if tmp then
   case GetSex(tmp[1]) of
   sex_male: Say(tmp[1], 'D9-Sol1-1');
   sex_female: Say(tmp[1], 'D9-FSol1-1');
   end;

if Frank then
   begin
   PlaceSeeing(GetX(mastodont), GetY(mastodont), 7, 8);
   CenterNowOnUnits(mastodont);

   Say(Frank, 'D9-Frank-1');
   Say(JMM, 'D9-JMM-1');
   Say(Frank, 'D9-Frank-2');

   RemoveSeeing(GetX(mastodont), GetY(mastodont), 7);
   end;

DialogueOff;
End;

// Spawn Burlak
Every 0$20 trigger first_attack do
var i, selected_option;
begin
selected_option := 1; // see Query QBaseAgain

wait(5$00);

repeat
 wait(0$1);
until not ru_attackers;

PrepareBurlak;

repeat
 wait(0$2);
until not HasTask(Burlak);

InGameOn;
DialogueOn;

CenterNowOnUnits(Masha);

SayRadio(Burlak, 'D10-Bur-1');

if Belkov and GetSide(Belkov) = 7 then
   Say(Belkov, 'D10-Bel-1');

if Gossudarov then
   Say(Gossudarov, 'D10-Gos-1');

if Kirilenkova then
   Say(Kirilenkova, 'D10-Kir-1');

Say(SolRu, 'D10-RSol1-1');

SayRadio(Burlak, 'D10-Bur-2');
Say(JMM, 'D10-JMM-2');

if Kirilenkova then
   Say(Kirilenkova, 'D10-Kir-2')
else
   Say(SolRu, 'D10-RSol1-2');

Say(JMM, 'D10-JMM-3');
SayRadio(Burlak, 'D10-Bur-3');
Say(JMM, 'D10-JMM-4');

DialogueOff;
InGameOff;

ChangeMissionObjectives('M2');

repeat
 wait(0$1);
until FilterAllUnits([[f_side, 7], [f_dist, Burlak, 8]]);

for i in FilterAllUnits([f_side, 4]) do
    SetSide(i, 7);

ChangeMissionObjectives('M3');

repeat
 wait(0$1);
until GetDistUnits(JMM, Burlak) < 8;

ComTurnUnit(JMM, Burlak);
ComTurnUnit(Burlak, JMM);

wait(0$0.3);

DialogueOn;

Say(JMM, 'D11-JMM-1');
Say(Burlak, 'D11-Bur-1');
Say(JMM, 'D11-JMM-2');
Say(Burlak, 'D11-Bur-2');
Say(JMM, 'D11-JMM-3');
Say(Burlak, 'D11-Bur-3');
Say(JMM, 'D11-JMM-4');

if ar_base_spotted then
   Say(Burlak, 'D12-Bur-1')
else
   begin
   RevealFogArea(7, area_base_arabian);
   CenterNowOnXY(127, 45);

   Say(Burlak, 'D12-Bur-1a');

   dwait(0$2);
   end;

Say(Burlak, 'D12-Bur-1b');
Say(JMM , 'D12-JMM-1');
Say(Burlak, 'D12-Bur-2');

if Roth then
   Say(Roth, 'D12-Roth-2')
else
   Say(SciRu, 'D12-RSci1-2');

Say(JMM , 'D12-JMM-2');
Say(Burlak, 'D12-Bur-3');
Say(JMM , 'D12-JMM-3');
Say(Burlak, 'D12-Bur-4');

case Query('QBase') of
1: begin // zostaw w spokoju
   Say(JMM , 'D13a-JMM-1');
   Say(Burlak, 'D13a-Bur-1');

   if Roth then
      Say(Roth, 'D13a-Roth-1')
   else
      Say(SciRu, 'D13a-RSci1-1');

   Say(JMM, 'D13a-JMM-2');

   case Query('QBaseAgain') of
        1: selected_option := 2;
        2: selected_option := 3;
   end;

   end;
2: selected_option := 2;
3: selected_option := 3;
end;

if selected_option = 2 then // try contact
   begin
   Say(JMM, 'D13b-JMM-1');
   Say(Burlak, 'D13b-Bur-1');
   Say(JMM, 'D13b-JMM-2');
   SayRadio(Abdul, 'D13b-Abd-2');
   Say(JMM, 'D13b-JMM-3');
   SayRadio(Abdul, 'D13b-Abd-3');
   Say(JMM, 'D13b-JMM-4');

   ar_active_attack := true;
   end;

if selected_option = 3 then // just attack them
   begin
   Say(JMM, 'D13c-JMM-1');
   Say(Burlak, 'D13c-Bur-1');
   end;

DialogueOff;

if not ar_active_attack then
   begin
   wait(6$00);
   ar_active_attack := true;
   end;

End;

// Spawn Gnyevko
Every 0$1 trigger IsPlaced(Burlak) and GetSide(Burlak) = 7 do
begin
wait(4$40);

repeat
 wait(0$1);
until not ru_attackers;

PrepareGnyevko;

ComMoveXY(Gnyevko, 124, 118);
