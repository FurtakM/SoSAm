repeat
 wait(0$1);
until IsAt(Gnyevko, 124, 118);

SayRadio(Gnyevko, 'DBelkov-Gny-1');
Say(Burlak, 'DBelkov-Bur-1a');

repeat
 wait(0$1);
until GetDistUnits(Gnyevko, NearestUnitToUnit(FilterAllUnits([f_side, 7]), Gnyevko)) < 8;

SetSide(Gnyevko, 7);
End;

// Spawn american attack
