// crates for alliance base
Every 0$30 do
var cr, time;
begin
time := 0$10;

while game do
      begin
      wait(time);

      if tick > 2$00 then
         time := time + [0$05, 0$06, 0$07][Difficulty];

      CreateCratesXYR(rand(1, 5), 70, 49, 25, true);

      if time > 5$00 then
         time := 0$30;
      end;

End;

